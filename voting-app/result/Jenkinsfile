pipeline{
    agent any
    
    tools{
        nodejs 'NodeJS 8.9.0'
    }

    stages{

        stage("build"){
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'Compiling Results app'
                dir('result'){
                    sh 'npm install'
                }
            }
        }

        stage("test"){
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'Unit test for Results app'
                dir('result'){
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }
    }
}