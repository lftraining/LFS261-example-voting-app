pipeline {
  agent any
  tools{
    nodejs 'nodejs 8.9.0'
  }

  stages{
    stage("build"){
      when{
        changeset "**/result/**"
      }
      steps{
        echo 'Build result app'
        dir('result'){
          sh 'npm install'
        }
      }
    }
    stage("test"){
      when{
        changeset "**/result/**"
      }
      steps{
        echo 'Running Unit Tests on result app'
        dir('result'){
          sh 'npm install'
          sh 'npm test'
        }
      }
    }
  }

  post{
    always{
      echo 'Multibranch pipeline for result is completed..'
    }
  }
}
