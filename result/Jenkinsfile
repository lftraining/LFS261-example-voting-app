pipeline {
    agent any

    tools {
        nodejs 'NodeJS 22.7.0'
    }

    stages {
        stage("build") {
            when {
                changeset "**/result/**"
            }
            steps {
                echo 'Compiling result app..'
                dir('result') {
                    sh 'npm install'
                }
            }
        }
        stage("test") {
            when {
                changeset "**/result/**"
            }
            steps {
                echo 'Running Unit Tests on result app..'
                dir('result') {
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }
    }

    post {
        always {
            echo 'Building multibranch pipeline for worker is completed..'
        }
    }
}
